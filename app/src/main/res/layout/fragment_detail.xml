<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.popularmovies.DetailFragment"
    android:stretchColumns="0,1"
    android:gravity="fill_horizontal|fill_vertical">

    <TableRow
        android:layout_width="fill_parent"

        android:layout_height="99dp"
        android:layout_gravity="top"
        android:gravity="center_vertical|center_horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="84dp"
            android:id="@+id/movie_title"
            android:layout_span="2"
            android:text="Avegers"
            android:layout_gravity="top"
            android:gravity="center_vertical|center_horizontal" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="left">
        <LinearLayout
            android:layout_span="2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="92dp"
                android:layout_height="138dp"
                android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />
            <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/release_date"
                        android:text="2015-07-12"
                        android:layout_gravity="center" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/users_rating"
                        android:text="8.5/100"
                        android:layout_gravity="center" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left"
        android:textAlignment="gravity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movie_synopsis"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:layout_span="2"
            android:layout_gravity="center"
            android:layout_column="0" />
    </TableRow>

</TableLayout>